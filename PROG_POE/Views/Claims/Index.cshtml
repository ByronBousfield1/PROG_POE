@model IEnumerable<PROG_POE.Models.Claim>
@{
    Layout = "_Layout";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Claims</h2>
    <a class="btn btn-success" href="/Claims/Create">New Claim</a>
</div>
<table class="table table-striped bg-white shadow">
    <thead><tr><th>Month</th><th>Total Hours</th><th>Total Amount (R)</th><th>Status</th><th>Stage</th><th></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Month.ToString("yyyy-MM")</td>
                <td>@c.TotalHours</td>
                <td>@c.TotalAmount</td>
                <td>@c.Status</td>
                <td>@c.Stage</td>
                <td><a class="btn btn-sm btn-primary" href="/Claims/Edit/@c.ClaimId">Open</a></td>
            </tr>
        }
    </tbody>
</table>

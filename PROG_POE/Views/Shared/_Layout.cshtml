@{
    Layout = null;
    var ok = TempData["ok"] as string;
    var err = TempData["err"] as string;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CMCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">CMCS</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/Claims">My Claims</a>
                <a class="nav-link" href="/Queue/Coordinator">Coordinator Queue</a>
                <a class="nav-link" href="/Queue/Manager">Manager Queue</a>
            </div>
        </div>
    </nav>
    <main class="container mb-5">
        @if (!string.IsNullOrEmpty(ok))
        {
            <div class="alert alert-success">@ok</div>
        }
        @if (!string.IsNullOrEmpty(err))
        {
            <div class="alert alert-danger">@err</div>
        }
        @RenderBody()
    </main>
    <footer class="text-center text-muted small mb-3">&copy; @DateTime.Now.Year CMCS Prototype</footer>
</body>
</html>
